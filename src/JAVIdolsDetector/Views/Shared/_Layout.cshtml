<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JAVIdolsDetector</title>

    <link rel="stylesheet" href="@Url.Content("~/css/global.css")" />
    <link rel="stylesheet" href=@Url.Content("~/lib/gs/gs-react-grid.css") />
    <link rel="stylesheet" href=@Url.Content("~/lib/gs/gs-react-modal.css") />

    <environment names="Development">
        @*========================= START Style sheets ==================================*@
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        @*========================= END Style sheets ==================================*@

        @*========================= START Scripts ==================================*@
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/react/react.min.js"></script>
        <script src="~/lib/react/react-dom.min.js"></script>
        <script src="~/lib/react-bootstrap/react-bootstrap.min.js"></script>
        @*========================= END Scripts ==================================*@
    </environment>
    <environment names="Staging,Production">
        @*========================= START Style sheets ==================================*@
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        @*========================= END Style sheets ==================================*@

        @*========================= START Scripts ==================================*@
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="https://unpkg.com/react@15.3.2/dist/react.min.js" asp-fallback-src="~/lib/react/react.min.js" asp-fallback-test="window.React"></script>
        <script src="https://unpkg.com/react-dom@15.3.2/dist/react-dom.min.js" asp-fallback-src="~/lib/react/react-dom.min.js" asp-fallback-test="window.React"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/react-bootstrap/0.30.5/react-bootstrap.min.js"></script>
        @*========================= END Scripts ==================================*@
    </environment>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">JAVIdolsDetector</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">React Tutorials<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="ReactTraining" asp-action="Index">Tutorial</a></li>
                            <li><a asp-area="" asp-controller="ReactTraining" asp-action="Thinking">Thinking in React</a></li>
                            <li><a asp-area="" asp-controller="ReactTraining" asp-action="GridDemo">Sample grid demo</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Admin" asp-action="PersonGroupList">Person Groups</a></li>
                            <li><a asp-area="" asp-controller="Admin" asp-action="PersonList">People</a></li>
                            <li><a asp-area="" asp-controller="Admin" asp-action="FaceList">Faces</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top:50px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - JAVIdolsDetector</p>
        </footer>
    </div>
</body>
</html>